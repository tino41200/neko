<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <display-name>NekoAtsume</display-name>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <display-name>inscriptionServlet</display-name>
        <servlet-name>inscriptionServlet</servlet-name>
        <servlet-class>Servlet.inscriptionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>inscriptionServlet</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>loginServlet</display-name>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>Servlet.loginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <display-name>logoutServlet</display-name>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>Servlet.logoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <display-name>listeChatServlet</display-name>
        <servlet-name>listeChatServlet</servlet-name>
        <servlet-class>Servlet.listeChatServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listeChatServlet</servlet-name>
        <url-pattern>/chats</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>listeChatServlet</servlet-name>
        <url-pattern>/chatsRare</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>listeChatServlet</servlet-name>
        <url-pattern>/chatsCommuns</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>accueil.php</welcome-file>
    </welcome-file-list>
</web-app>
